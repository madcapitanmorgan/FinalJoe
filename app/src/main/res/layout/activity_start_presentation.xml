<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.example.finaljoe.StartPresentationActivity">

    <ImageView
        android:id="@+id/image_prest"
        android:layout_width="403dp"
        android:layout_height="140dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/worker_small"/>

    <TextView
        android:id="@+id/tex_script"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Script" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginTop="250dp"
        android:text="Previous"
        android:onClick="toPrevious"
        android:id="@+id/b_prev"/>

    <Button
        android:id="@+id/b_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:text="Finish"
        android:onClick="toMainMenu"/>

    <Button
        android:id="@+id/b_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:text="Next"
        android:onClick="toNext"/>

</LinearLayout>