<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.example.finaljoe.StartPresentationActivity"
    android:gravity="center"
    android:padding="15dp">

    <ImageView
        android:id="@+id/image_prest"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="30dp"
        android:src="@drawable/worker_small"/>

    <TextView
        android:id="@+id/tex_script"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_margin="15dp"
        android:text="Script" />

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:onClick="toPrevious"

        android:layout_margin="15dp"
        android:id="@+id/b_prev"/>

        <Button
            android:id="@+id/b_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish"

            android:layout_margin="15dp"
            android:onClick="toMainMenu"/>

        <Button
            android:id="@+id/b_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"

            android:layout_margin="15dp"
            android:onClick="toNext"/>


</LinearLayout>