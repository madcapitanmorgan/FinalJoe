<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Engloba los componentes en un LinearLayout-->
    <!--Define que tenga orientación vertical y
    gravity center-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Para cada elemento le pones un margin-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pechacucha Assistant"
            android:layout_margin="20dp"
            />
        <!-- No olvides poner el call a OnClick-->
        <Button
            android:id="@+id/b_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Iniciar Presentación"
            android:onClick="Start"/>
        <Button
            android:id="@+id/b_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Añadir Diapositivas"
            android:onClick="Add"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>